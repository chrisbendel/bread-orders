<%= form_with model: [@store, @event], local: true do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div class="group">
    <div>
      <%= form.label :orders_open_at, "Orders open at" %><br>
      <%= form.date_field :orders_open_at %>
    </div>

    <div>
      <%= form.label :orders_close_at, "Orders close at" %><br>
      <%= form.date_field :orders_close_at %>
    </div>
  </div>

  <div>
    <%= form.label :pickup_at, "Pickup date" %><br>
    <%= form.date_field :pickup_at %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
