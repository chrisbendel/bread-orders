<h1><%= @event.name %></h1>

<p><%= @event.description %></p>

<p>Pickup: <%= nice_date(@event.pickup_at) %></p>

<hr>

<h2>Products</h2>

<ul>
  <% @products.each do |product| %>
    <li>
      <strong><%= product.name %></strong>
      (<%= number_to_currency(product.price_cents.to_f / 100) %>)

      <form action="<%= storefront_event_order_items_path(@store.slug, @event, event_product_id: product.id) %>" method="post" style="display:inline;">
        <%= csrf_meta_tags %>
        <button>Add</button>
      </form>
    </li>
  <% end %>
</ul>

<% if @order.order_items.any? %>
  <section class="order-summary">
    <h2>Your Order</h2>

    <ul>
      <% @order.order_items.includes(:event_product).each do |item| %>
        <li>
          <strong><%= item.event_product.name %></strong>
          â€” qty: <%= item.quantity %>
        </li>
      <% end %>
    </ul>

    <p><strong>Total items:</strong> <%= @order.order_items.sum(:quantity) %></p>
  </section>
<% else %>
  <p>No items in your order yet.</p>
<% end %>


<p><a href="<%= storefront_path(@store.slug) %>">Back to store</a></p>
